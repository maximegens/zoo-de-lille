<RelativeLayout
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:id="@+id/chargement_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_theme_green_zoo"
    >
    
   <ProgressBar
	   android:id="@+id/progressBarChargement"
	   style="?android:attr/progressBarStyleLarge"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_centerInParent="true"
	   android:visibility="invisible"
    />

   <ImageView
       android:id="@+id/imageViewChargement"
       android:contentDescription="@string/description_image_chargement"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/progressBarChargement"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="20dp"
       android:src="@drawable/logo_zoo_lille" />
    
</RelativeLayout>
