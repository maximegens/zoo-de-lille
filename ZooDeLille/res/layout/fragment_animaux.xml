<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewTitreAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/les_animaux"
        android:textColor="@color/a_la_une"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
    <TextView
        android:id="@+id/textViewExplicationAnimal"
        android:layout_below="@+id/textViewTitreAnimal"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/explication_liste"
        android:textStyle="italic"
       />
    
    <ListView
        android:id="@+id/listViewAnimal"
        android:layout_below="@+id/textViewExplicationAnimal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        >
    </ListView>



</RelativeLayout>
